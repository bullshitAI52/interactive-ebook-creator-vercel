{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "interactive-ebook",
  "version": "0.1.0",
  "identifier": "com.ebook.editor",
  "build": {
    "beforeDevCommand": "npx http-server ui -p 8080",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "互动电子书制作工具",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}